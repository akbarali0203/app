<?xml version="1.1" encoding="UTF-8" standalone="yes"?>
<widget id="com.schleier.uniheld" version="0.1.7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>UNIHELD</name>
    <description>Uniheld</description>
    <author email="info@schleier.it" href="http://schleier.it">Schleier IT</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*.youtube.com" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="26" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="xwalkZOrderOnTop" value="true" />
    <preference name="BackgroundColor" value="0" />
    <preference name="orientation" value="portrait" />
    <preference name="android-targetSdkVersion" value="26" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
	<preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="DisallowOverscroll" value="true" />
    <platform name="android">
        <allow-intent href="market:*" />
		<icon density="ldpi" src="www/img/resources/android/icon/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="www/img/resources/android/icon/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="www/img/resources/android/icon/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="www/img/resources/android/icon/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="www/img/resources/android/icon/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="www/img/resources/android/icon/drawable-xxxhdpi-icon.png" />
        <splash density="land-ldpi" src="www/img/resources/android/splash/drawable-land-ldpi-screen.png" />
        <splash density="land-mdpi" src="www/img/resources/android/splash/drawable-land-mdpi-screen.png" />
        <splash density="land-hdpi" src="www/img/resources/android/splash/drawable-land-hdpi-screen.png" />
        <splash density="land-xhdpi" src="www/img/resources/android/splash/drawable-land-xhdpi-screen.png" />
        <splash density="land-xxhdpi" src="www/img/resources/android/splash/drawable-land-xxhdpi-screen.png" />
        <splash density="land-xxxhdpi" src="www/img/resources/android/splash/drawable-land-xxxhdpi-screen.png" />
        <splash density="port-ldpi" src="www/img/resources/android/splash/drawable-port-ldpi-screen.png" />
        <splash density="port-mdpi" src="www/img/resources/android/splash/drawable-port-mdpi-screen.png" />
        <splash density="port-hdpi" src="www/img/resources/android/splash/drawable-port-hdpi-screen.png" />
        <splash density="port-xhdpi" src="www/img/resources/android/splash/drawable-port-xhdpi-screen.png" />
        <splash density="port-xxhdpi" src="www/img/resources/android/splash/drawable-port-xxhdpi-screen.png" />
        <splash density="port-xxxhdpi" src="www/img/resources/android/splash/drawable-port-xxxhdpi-screen.png" />
    </platform>
    <plugin name="cordova-plugin-actionsheet" spec="^2.3.3" />
    <plugin name="cordova-plugin-camera" spec="^2.4.1">
        <param name="CAMERA_USAGE_DESCRIPTION" value="Wir nutzen die Foto-Berechtigung, um Profilbilder zu ändern." />
        <param name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Wir nutzen die Foto-Berechtigung, um Profilbilder zu ändern." />
    </plugin>
    <plugin name="cordova-plugin-clipboard-x" spec="^1.0.1" />
    <plugin name="cordova-plugin-device" spec="^2.0.1" />
    <plugin name="cordova-plugin-facebook4" spec="^1.9.1">
        <variable name="APP_ID" value="141557813331986" />
        <variable name="APP_NAME" value="uniheld" />
    </plugin>
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-file-transfer"  spec="1.6.3"  source="npm" />
    <plugin name="cordova-plugin-filepath" spec="^1.2.0" />
    <plugin name="cordova-plugin-geolocation" spec="^0.3.12" />
    <plugin name="cordova-plugin-google-analytics" spec="^1.8.3" />
    <!--<plugin name="cordova-plugin-googleplus" spec="^5.2.1">
        <variable name="REVERSED_CLIENT_ID" value="873989346781-5ndqc1f4hsmv7c98b5vt7qakvoplcpug.apps.googleusercontent.com" />
    </plugin>-->
    <plugin name="cordova-plugin-inappbrowser" spec="^2.0.2" />
    <plugin name="cordova-plugin-ionic-keyboard" spec="^2.0.5" />
    <plugin name="cordova-plugin-ionic-webview" spec="^1.1.16" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-statusbar" spec="^2.2.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.3.2" />
    <plugin name="cordova-plugin-x-toast" spec="^2.6.0" />
    <plugin name="onesignal-cordova-plugin" spec="^2.3.1" />
    <engine name="android" spec="6.2.3" />
</widget>
